<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BMIActivity">

    <EditText
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete|number"
            android:ems="10"
            android:hint="Height (ft)" android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/HeightFeetView"/>
    <EditText
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete|number"
            android:ems="10"
            android:hint="Height (in)" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/HeightInchesView" app:layout_constraintTop_toBottomOf="@+id/HeightFeetView"/>
    <EditText
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete|number"
            android:ems="10"
            android:hint="Weight (lb)" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/WeightPoundsView" app:layout_constraintTop_toBottomOf="@+id/HeightInchesView"/>
    <TextView
            android:text="BMI"
            android:layout_width="128dp"
            android:layout_height="41dp"
            android:id="@+id/BMIView"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/HeightFeetView" android:layout_marginStart="96dp"/>
</android.support.constraint.ConstraintLayout>
